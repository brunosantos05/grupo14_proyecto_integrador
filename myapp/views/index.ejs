<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link width="" rel="shortcut icon" href="./images/Nani.png" />
	
	<title> CAMISETAS NANI</title>
			<!-- Font Awesome Stylesheet -->
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/css/all.min.css">
	<link rel="stylesheet" href="/stylesheets/app.css">
	<!-- Bootstrap Grid Stylesheet -->
	<link rel="stylesheet" href="/stylesheets/bootstrap-grid.min.css">
	<!-- Own Stylesheet -->
	<link rel="stylesheet" href="/stylesheets/app.css">
</head>
<body>
	<% if (user) { %>
  <%- include('./partials/headerLogueado') %>
<% } else { %>
  <%- include('./partials/header') %>
<% } %>
	<!-- Banner -->
	<div class="banner">
		<img src="images/camisetas.jpg" alt="Banner de ofertas">
	</div>
	<!-- /Banner -->

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Productos</h2>
			</div>
			<!-- Show the "ultimos" products -->
			<% for(let i = 0; i < productos.length; i++) { %>

			<div class="col-12 col-sm-6 col-lg-3">
				<section class="product-box">
					<a href="/products/<%=productos[i].id%>">
						<figure class="product-box_image">
							<img src= "/images/products/<%=productos[i].imagen%>" alt= "<%=productos[i].nombre%>" >
						</figure>
						<article class="product-box_data">
							<h2><%=productos[i].nombre%></h2>
							<p><%=productos[i].descripcion%></p>
							<p> comentarios: <%=productos[i].comentarios.length%></p>
						</article>
					</a>
				</section>
			</div>
			<%}%>
		</div>
	</div>


	<!-- footer -->
	<%- include('partials/footer') %>
	<!-- /footer -->
</body>	
</html>