<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/stylesheets/css/app.css">
  <link rel="shortcut icon" href="./images/Nani.png" />
  <title>CAMISETAS NANI</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/css/all.min.css">
  <link rel="stylesheet" href="/stylesheets/bootstrap-grid.min.css">
  <link rel="stylesheet" href="/stylesheets/app.css">
</head>
<body>
  <% if (user) { %>
    <%- include('./partials/headerLogueado') %>
  <% } else { %>
    <%- include('./partials/header') %>
  <% } %>

  <section class="info-usuario container products-wrapper">
    <div class="row">
      <div class="img-container offset-3 col-2">
       <img src="/images/users/lucia.jpg" alt="foto de perfil" class="foto-perfil">

      </div>
      <div class="data-container col-6">
        <div class="d-flex align-items-center ">
          <h1 class="main-title"><%= user.usuario %> 
            <a href="profile-edit"><i class="fas fa-cog"></i></a>
          </h1>
          <a class="btn mt-3 ml-4" href="">SEGUIR</a>
        </div>
        <ul>
          <li><%= user.email %></li>
          <li><%= productos.length %> productos</li>
          <li>2000 seguidores</li>
          <li>300 comentarios</li>
        </ul>
      </div>
    </div>
  </section>

  <div class="container products-wrapper">
    <div class="row">
      <div class="col-12">
        <h2 class="products-title">Mis productos</h2>
      </div>

      <% productos.forEach(producto => { %>
        <div class="col-12 col-sm-6 col-lg-3">
          <section class="product-box">
            <a href="/products/<%= producto.id %>">
              <figure class="product-box_image">
                <img src="<%= producto.imagen %>" alt="<%= producto.nombre %>">
              </figure>
              <article class="product-box_data">
                <h2><%= producto.nombre %></h2>
                <p><%= producto.descripcion %></p>
                <p>comentarios: <%= producto.comentarios.length %></p>
              </article>
            </a>
          </section>
        </div>
      <% }); %>
    </div>
  </div>

  <%- include('partials/footer') %>
</body>	
</html>
